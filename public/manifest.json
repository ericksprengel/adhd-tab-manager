{
  "name": "ADHD Tab Manager",
  "description": "Tab managar for ADHD users",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "adhd_tab_manager_icon.png",
    "128": "adhd_tab_manager_icon.png"
  },
  "side_panel": {
    "default_path": "index.html",
    "default_icon": "adhd_tab_manager_icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-adhd-tab-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open ADHD Tab Manager"
    }
  },
  "permissions": [
    "tabs",
    "sidePanel"
  ]
}